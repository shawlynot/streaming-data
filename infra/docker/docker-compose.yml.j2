---

services:
  reverse-proxy:
    image: traefik:v3.0
    restart: unless-stopped
    user: root
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "{{ traefik_home }}:/etc/traefik/:ro"
      - "{{ acme_home }}/config/{{ cert.domain }}_ecc:/etc/certs"

  db:
    image: docker.io/library/postgres:18-alpine
    restart: unless-stopped
    ports: 
     - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -d postgres -U $${POSTGRES_USER}"]
      start_period: 20s
      interval: 30s
      retries: 5
      timeout: 5s
    volumes:
      - database:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: "{{ db.POSTGRES_PASSWORD }}"
      POSTGRES_USER: admin
  
  ingest-live:
    image: ghcr.io/shawlynot/streaming-data:latest
    command: ["python", "main_live_ingest.py"]
    restart: unless-stopped
    environment:
      DB_PASS: "{{ db.POSTGRES_PASSWORD }}"
      DB_HOST: db
      DB_PORT: "5432"
  
  ingest-historical:
    image: ghcr.io/shawlynot/streaming-data:latest
    command: ["python", "main_historical_ingest.py"]
    restart: unless-stopped
    environment:
      DB_PASS: "{{ db.POSTGRES_PASSWORD }}"
      DB_HOST: db
      DB_PORT: "5432"

volumes:
  database:
    driver: local
